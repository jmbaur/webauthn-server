<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="/style.css">
		<title>WebAuthnTiny</title>
	</head>
	<body>
		<div>
			<form>
				<label for="new-cred-name">New credential:</label><br>
				<input type="text" placeholder="name" id="new-cred-name" name="new-cred-name">
				<input type="submit" value="Add">
			</form>
		</div>
		<div>
			{% unless credentials == empty %}
				Existing credentials:
				<div>
					{% for cred in credentials %}
						<div>
							<button class="delete-button" value="{{ cred.id }}">
								&#x2212;
							</button>
							<label for="delete-button">{{ cred.name }}</label>
						</div>
					{% endfor %}
				</div>
			{% endunless %}
		</div>
		<script src="/main.js"></script>
	</body>
</html>
